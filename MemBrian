import requests

API_KEY = "sk-proj-NZHtWXKoSc7r7aROKathHS3"

url = "https://api.openai.com/v1/chat/completions"
headers = {
    "Authorization": f"Bearer {API_KEY}",
    "Content-Type": "application/json"
}
data = {
    "model": "gpt-3.5-turbo",
    "messages": [{"role": "user", "content": "Придумай смешное определение для слова 'конспект'"}],
    "max_tokens": 50
}

print("Отправляю запрос к ИИ...")
response = requests.post(url, json=data, headers=headers)

if response.status_code == 200:
    answer = response.json()['choices'][0]['message']['content']
    print("✅ УСПЕХ! Ответ от ИИ:")
    print("---")
    print(answer)
    print("---")
else:
    print("❌ Ошибка!")
    print("Код ошибки:", response.status_code)
    print("Текст ошибки:", response.text)